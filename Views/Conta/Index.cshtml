@{
}
<h3>Minhas Contas</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>ID</th>
            <th>Nome</th>
            <th>Saldo</th>
        </tr>
    </thead>
@{
    foreach (var item in (List<ContaModel>) ViewBag.ListaConta)
    {
        <tbody>
            <tr>
                <td><button class= "btn btn-danger" type = "button" onclick = "Excluir(@item.Id.ToString())">Excluir</button></td>
                <td>@item.Id.ToString()</td>
                <td>@item.Nome.ToString()</td>
                <td>R$ @item.Saldo.ToString()</td>
            </tr>       
        </tbody>
    }


} 
</table>

<button type="button" class="btn btn-primary" onclick = "CriarConta()" >Criar Conta!</button>
<script>
    
    function CriarConta()
    {
        window.location.href = "../Conta/CriarConta";
    }

    function Excluir(Id_Conta)
    {
        window.location.href = "../Conta/ExcluirConta/" + Id_Conta;
    }
</script>