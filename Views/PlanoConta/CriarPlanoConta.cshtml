@{
}

<h3>Criar Conta</h3>
@{
    var vDescricao = "";
    var vTipo = "";
    var vId = 0;

    try
    {   vId = int.Parse(@ViewBag.Registro.Id.ToString());
        vDescricao = @ViewBag.Registro.Descricao.ToString();
        vTipo = @ViewBag.Registro.Tipo.ToString();
    }
    catch 
    {
        
    }
    }
<form asp-controller = "PlanoConta" asp-action = "CriarPlanoConta">
    
    <input type = "hidden" asp-for= "Id" value = "@vId" />

    <div class="form-group">
        <label>Descrição:</label>
        <input type="text" class="form-control" asp-for="Descricao" value = "@vDescricao">
        <span asp-validation-for ="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tipo:</label>
          
                @{
                    if (vTipo == "R")
                    {
                        <div class="radio"><lable><input type="radio" asp-for="Tipo" value="R" checked>Receita</lable></div>
                        <div class="radio"><lable><input type="radio" asp-for="Tipo" value="D" unchecked>Despesa</lable></div>
                    }
                    else
                    {   <div class="radio"><lable><input type="radio" asp-for="Tipo" value="R" unchecked>Receita</lable></div>
                        <div class="radio"><lable><input type="radio" asp-for="Tipo" value="D" checked>Despesa</lable></div>
                    }

                 }    
       
    </div>
    <button type="submit" class="btn btn-block btn-success">Criar</button>
</form>