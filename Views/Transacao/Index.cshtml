@{
}
<h3>Plano de Contas</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>#</th>
            <th>ID</th>
            <th>Data</th>
            <th>Tipo</th>
            <th>Valor</th>
            <th>Histórico</th>
            <th>Conta</th>
            <th>Plano De Contas</th>
            </tr>
    </thead>
@{
    foreach (var item in (List<TransacaoModel>) ViewBag.ListaTransacao)
    {
        <tbody>
            <tr>
                <td><button class= "btn btn-primary" type = "button" onclick = "Editar(@item.Id.ToString())">Editar</button></td>
                <td><button class= "btn btn-danger" type = "button" onclick = "Excluir(@item.Id.ToString())">Excluir</button></td>
                <td>@item.Id.ToString()</td>
                <td>@item.Data.ToString()</td>
                <td>@item.Tipo.ToString().Replace("R","Receita").Replace("D","Despesa")</td>
                <td>R$ @item.Valor.ToString()</td>
                <td>@item.Descricao.ToString()</td>
                <td>@item.NomeConta.ToString()</td>
                <td>@item.DescricaoPlanoConta.ToString()</td>
                
            </tr>       
        </tbody>
    }


} 
</table>

<button type="button" class="btn btn-primary" onclick = "RegistrarTransacao()" >Registrar Transação!</button>
<script>
    
    function RegistrarTransacao()
    {
        window.location.href = "../Transacao/Registrar";

    }

    function Excluir(Id)
    {
        window.location.href = "../Transacao/ExcluirTransacao/" + Id;

    }
    function Editar(Id){

         window.location.href = "../Transacao/Registrar/" + Id;

    }
</script>